<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/cardVu"
    android:layout_margin="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@drawable/no_image_placeholder"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titolo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="nome Oggetto"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingVertical="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/prezzo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Prezzo"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"/>

                <ImageButton
                    android:id="@+id/rimuovi"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/baseline_delete_50"
                    android:backgroundTint="@color/teal_200"

                />

                <ImageButton
                    android:id="@+id/richiedi_oggetto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/baseline_shopping_cart_checkout_50"
                    android:backgroundTint="@color/teal_200"

                />
                <ImageView
                    android:id="@+id/richiesta_inviata"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/baseline_send_24"
                    android:background="@color/teal_200"
                    android:visibility="gone"
                />

                <ImageButton
                    android:id="@+id/inserisci_recensione_venditore"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/baseline_rate_review_50"
                    android:background="@color/teal_200"
                    android:visibility="gone"
                />


            </LinearLayout>

        </LinearLayout>
        

    </LinearLayout>

</androidx.cardview.widget.CardView>