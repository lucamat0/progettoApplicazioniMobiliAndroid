<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AggiungiRecensioneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:text="Aggiungi recensione"
            android:padding="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/titolo_nuova_recensione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titolo" />

        <EditText
            android:id="@+id/descrizione_nuova_recensione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrizione"
            android:minLines="4"
            android:maxLines="5" />

        <RatingBar
            android:id="@+id/valutazione_venditore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="1"
            android:stepSize="0.5"
            android:layout_gravity="center"
            android:isIndicator="false" />

        <Button
            android:id="@+id/aggiungi_ricerca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invia recensione"
            style="@style/buttonSpaceHorizontal"/>

    </LinearLayout>

</LinearLayout>